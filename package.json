{
  "name": "autodep",
  "repository": {
    "type": "git",
    "url": "https://github.com/samfolo/autodep"
  },
  "bugs": {
    "url": "https://github.com/samfolo/autodep/issues"
  },
  "icon": "assets/autodep-icon.png",
  "publisher": "SamFolorunsho",
  "license": "Apache-2.0",
  "displayName": "Autodep",
  "description": "Automatic management of build deps for Node-based, build-system-dependent projects",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [
    "workspaceContains:**/.autodep.yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Autodep",
      "properties": {
        "autodep.runOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Allow Autodep to run each time a document is saved."
        }
      }
    },
    "languages": [
      {
        "id": "autodep",
        "filenames": [
          ".autodep.yaml",
          ".autodep"
        ],
        "aliases": [
          "Autodep",
          "autodep"
        ],
        "configuration": "language-configuration.json",
        "icon": {
          "light": "assets/config-icon.svg",
          "dark": "assets/config-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "autodep",
        "scopeName": "source.yaml",
        "path": "syntaxes/yaml.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/lodash.merge": "^4.6.7",
    "@types/lodash.mergewith": "^4.6.7",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "vsce": "^2.10.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "yaml": "^2.1.1"
  },
  "dependencies": {
    "@types/lodash.clonedeep": "^4.5.7",
    "ajv": "^8.11.0",
    "ajv-errors": "^3.0.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.merge": "^4.6.2",
    "lodash.mergewith": "^4.6.2",
    "minimatch": "^5.1.0",
    "node-source-walk": "^5.0.0",
    "precinct": "^9.0.1"
  }
}
